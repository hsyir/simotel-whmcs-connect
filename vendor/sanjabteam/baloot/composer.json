{
    "name": "sanjabteam/baloot",
    "description": "Laravel helper package for iranians",
    "keywords": [
        "laravel",
        "sanjabteam",
        "helpers"
    ],
    "homepage": "https://github.com/sanjabteam/baloot",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "amir alizadeh",
            "email": "amiralizadeh9480@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "hekmatinasser/verta": "^1.10",
        "illuminate/support": "^7 | ^8",
        "cviebrock/eloquent-sluggable": "^7 | ^8"
    },
    "require-dev": {
        "orchestra/testbench": "^5.1 | ^6",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Baloot\\": "src"
        },
        "classmap": [
            "database/seeds"
        ],
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Baloot\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\"",
        "test-coverage": "\"vendor/bin/phpunit\" --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Baloot\\BalootServiceProvider"
            ]
        }
    }
}
